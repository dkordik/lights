#!/bin/bash
ROOT="$(dirname $(realpath $0))"
if [ "X$ROOT" == "X" ]; then ROOT="$(dirname $0)"; fi

while [ true ]; do
	RUNNING=`ps ax | grep knob | grep -v grep | awk '{ printf $0 }'`
	if [ "X$RUNNING" == "X" ]; then
		echo "`date` -- Knob service not found. Triggering restart!"
		$ROOT/restart_knob
	else
		printf "."
	fi
	sleep 15
done
